# ===========================================
# ScrapeDgit Environment Configuration
# ===========================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/scrapedgit"

# Redis
REDIS_URL="redis://localhost:6379"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-min-32-chars"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# JWT Secrets
JWT_ACCESS_SECRET="your-jwt-access-secret-key-min-32-chars"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key-min-32-chars"

# OpenAI
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4o-mini"

# Model tried : llama3.1-8b (not bad), llama-4-scout-17b-16e-instruct (not good)

# Email (SMTP) - Gmail Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-gmail-app-password"
SMTP_FROM="ScrapeDgit <noreply@scrapedgit.com>"


# Application
NODE_ENV="development"
APP_URL="http://localhost:3000"
